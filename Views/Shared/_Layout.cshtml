<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - versio 0.5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
          crossorigin="anonymous">
</head>
<body>
    @{ if (Session["username"] == null) {
            Html.RenderPartial("_NavbarLoggedOut");
       } else {
            Html.RenderPartial("_NavbarLoggedIn");
        }
    }
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer class="oma-footer">
            @using System.Globalization
            @{
                string loggausInfo = "";
                if (Session["UserName"] == null)
                {
                    loggausInfo = "Et ole kirjautunut järjestelmään";
                }
                else
                {
                    loggausInfo = "Olet kirjautunut käyttäjänä: " + Session["UserName"];
                }
            }
            <p>&copy; Careeria Northwind-sovellus, @loggausInfo, tänään on @DateTime.Today.ToString("D", CultureInfo.CreateSpecificCulture("fi-FI"))</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
